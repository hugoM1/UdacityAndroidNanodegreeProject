<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="udacity.hugo.myappportfolio.spotifystreamer.SpotifyStreamerActivity">

    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_h_size"
        android:layout_margin="@dimen/search_margin"
        android:hint="@string/search_an_artist"
        android:inputType="textPersonName"/>

    <ListView
        android:id="@+id/artist_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/search_margin" />

</LinearLayout>
