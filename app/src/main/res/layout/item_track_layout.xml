<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_track_h_size"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_track"
        android:layout_width="@dimen/artist_image_w_size"
        android:layout_height="@dimen/artist_image_h_size"
        android:src="@android:drawable/gallery_thumb"
        android:layout_gravity="center"
        android:contentDescription="@string/desc_author_image"
        android:layout_margin="@dimen/image_view_author_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text_view_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="@dimen/text_view_author_name_text_size"
            android:layout_marginLeft="@dimen/text_view_track_album"
            android:layout_marginStart="@dimen/text_view_track_album"/>

        <TextView
            android:id="@+id/text_view_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="@dimen/text_view_author_name_text_size"
            android:layout_marginLeft="@dimen/text_view_track_album"
            android:layout_marginStart="@dimen/text_view_track_album"
            android:layout_marginTop="@dimen/text_view_track_album"/>

    </LinearLayout>

</LinearLayout>